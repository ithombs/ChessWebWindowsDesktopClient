<Window x:Class="ChessWebWinClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChessWebWinClient"
        mc:Ignorable="d"
        Title="ChessWebWinClient" Height="724" Width="726" Closed="Window_Closed">
    <Grid>
        <Canvas>
            <local:ThumbChessPiece Canvas.Left="250" Canvas.Top="64" DragDelta="ThumbChessPiece_DragDelta" Panel.ZIndex="5" RenderTransformOrigin="0.26,2.29">
                <Thumb.Template>
                    <ControlTemplate>
                        <Rectangle Fill="Black" Height="50" Width="50"></Rectangle>
                    </ControlTemplate>
                </Thumb.Template>
            </local:ThumbChessPiece>

            <local:ChessBoard></local:ChessBoard>
        </Canvas>
    </Grid>
</Window>
