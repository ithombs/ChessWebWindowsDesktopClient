<Window x:Class="ChessWebWinClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChessWebWinClient"
        mc:Ignorable="d"
        Title="ChessWebWinClient" Height="685.275" Width="921" Closed="Window_Closed">
    <Grid>
        <Canvas>
            <local:ChessBoard x:Name="chessBoard" PieceMoved="chessBoard_PieceMoved" Canvas.Left="84" Canvas.Top="-46" Height="705" Width="686"></local:ChessBoard>
            <Button x:Name="btnEnterQueue" Content="Enter Queue" Click="btnEnterQueue_Click" Canvas.Left="707" Canvas.Top="551" Width="74"/>
            <Button x:Name="btnTestMove" Content="TestMove" Click="btnTestMove_Click" Canvas.Left="827" Canvas.Top="551" Width="76"/>
            <DataGrid x:Name="moveList" Canvas.Left="10" Canvas.Top="76" Height="495" Width="130"  HorizontalAlignment="Left" HeadersVisibility="Column">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="From" Width="64" Binding="{Binding Path=to}" CanUserSort="False"/>
                    <DataGridTextColumn Header="To" Width="64" Binding="{Binding Path=from}" CanUserSort="False"/>
                </DataGrid.Columns>
            </DataGrid>
        </Canvas>
        <Label Content="Opponent: " HorizontalAlignment="Left" Margin="706,76,0,0" VerticalAlignment="Top" Width="179"/>
        <Label x:Name="lblOpponent" Content="-----" HorizontalAlignment="Left" Margin="772,76,0,0" VerticalAlignment="Top" Width="141"/>
        <Label x:Name="lblColor" Content="-----" HorizontalAlignment="Left" Margin="744,107,0,0" VerticalAlignment="Top" Width="141"/>
        <Label Content="Side: " HorizontalAlignment="Left" Margin="706,107,0,0" VerticalAlignment="Top" Width="141"/>
        <Label x:Name="lblQueueTimer" Content="Time goes here" HorizontalAlignment="Left" Margin="387,10,0,0" VerticalAlignment="Top" Width="141"/>
    </Grid>
</Window>
